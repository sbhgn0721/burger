<img src="/assets/img/burger.png" alt="burger">

<h1>Eat-Da-Burger</h1>

<br>
<br>

<div class="container">
    <div class="row" >
        <div class="col-md-6" id="available">
            <ul>
                {{#each burgers}}
                {{#unless this.devoured}}
                <li>
                    {{this.id}}.{{this.burger_name}}
                    <form class="form-inline" action="/{{this.id}}?_method=PUT" method="POST">

                        <input type="hidden" name="devoured" value="false" class="form-control">

                        <button type="submit" class="btn btn-danger">Devour it</button>
                    </form>
                </li>
                {{/unless}}
                {{/each}}
            </ul>

        </div>

        <div class="col-md-6" id="devoured">
            <ul>
                {{#each burgers}}
                {{#if this.devoured}}
                <li>
                    {{this.id}}.{{this.burger_name}}
                </li>

                {{/if}}
                {{/each}}
            </ul>
        </div>

    </div>
    

    <div class="row">
        <div class="col-md-12"  id="add">
            <form class="create-update-form" action="/" method="POST">

                <div class="form-group">
                    <input type="text" id="burger" name="burger_name">
                </div>

                <button class="btn btn-primary" type="submit">Submit</button>

            </form>
            <p>Enter a burger you want to eat Click the "Submit" button</p>
        </div>

    </div>

</div>